<div class="page-header">
  <%= link_to blogs_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>

  <h1><%= @blog.title %></h1>
</div>
 <div class="blog-post">
    <img class="photo_url" src="<%= @blog.photo %>">
    <div class="content">
      <p><%= @blog.post %></p>
      <div class="byline">
       <%= image_tag @blog.user.avatar.url, class: 'photo' %>
       <p class="author link"><%= link_to @blog.user.display_name, @blog.user %></p>
      </div>
    </div>
    <%= link_to "Edit Blog", edit_blog_path(@blog) , class: 'button button1 hover' %><%= link_to 'Delete', @blog, class: 'button hover', method: :delete, data: { confirm: 'Are you sure?' , } %>


</div>
<h1>Comments</h1>

<ul id="comments">
  <% @comments.each do |comment| %>
    <li><%= comment.commenter %></li>
    <li><%= comment.body %></li>
  <% end %>
</ul>

<h2>New Comment</h2>
<%= form_for [@blog, @comment] do |f| %>
  <ol>
    <li>
      <%= f.label :commenter %><br />
      <%= f.text_field :commenter %>
    </li>
    <li>
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </li>
    <li><%= f.submit "Add comment" %></li>
  </ol>
<% end %>
