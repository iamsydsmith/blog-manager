<div class="page-header">
  <%= link_to blogs_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>

  <h1><%= @blog.title %></h1>
</div>

 <div class="blog-post">
    <img class="photo_url" src="<%= @blog.photo %>">
    <div class="content">
      <p><%= @blog.post %></p>
      <div class="byline">
       <%= image_tag @blog.user.avatar.url, class: 'photo' %>
       <p class="author link"><%= link_to @blog.user.display_name, @blog.user %></p>
      </div>
    </div>

      <div class="comments">
        <div class="posted-comments">
          <h3>Comments</h3>
          <ol>
            <% @comments.each do |comment| %>
            <div class="space"><strong>Name</strong>: <%= comment.commenter %><br><br>
            <strong>Comment: </strong><%= comment.body %>
            </div>
            <% end %>
          </ol>
          </div>

<div class="new-comment">
<h3>New Comment</h3>
<%= form_for [@blog, @comment] do |f| %>
  <div class="form-group">
      <%= f.label :commenter, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
      <%= f.text_field :commenter, class: "form-control" %>
      </div>
  </div>
  <div class="form-group">
      <%= f.label :body, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
      <%= f.text_area :body, class: "form-control" %>
      </div>
      </div>

    <%= f.submit "Add comment" %>
<% end %>
</div>



</div>


    <%= link_to "Edit Blog", edit_blog_path(@blog) , class: 'button button1 hover' %><%= link_to 'Delete', @blog, class: 'button hover', method: :delete, data: { confirm: 'Are you sure?' , } %>


</div>
